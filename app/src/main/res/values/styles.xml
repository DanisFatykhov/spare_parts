<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <dimen name="toolbar_height">50dp</dimen>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar_gray</item>
    </style>

    <style name="image_spare_parts">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:src">@drawable/image_spare_parts</item>
    </style>

    <style name="image_menu">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="image_back_or_close" parent="image_menu">
    </style>
    
    <style name="image_check" parent="image_menu">
        <item name="android:src">@drawable/ic_check</item>
    </style>
<!---->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="login_btn" parent="button">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:textColor">@color/login_btn_color</item>
        <item name="android:stateListAnimator">@animator/login_btn_animator</item>
    </style>

    <style name="image">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/image_bg</item>
    </style>
    
    <style name="upper_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/text_bg</item>
    </style>

    <style name="lower_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="edit_profile">
        <item name="android:background">@drawable/input_bg</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="edit">
        <item name="android:background">@drawable/input_bg</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="search">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="text_center">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_from_add">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">3dp</item>
    </style>

    <style name="text_from_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingStart">3dp</item>
    </style>

    <style name="progress_view">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@drawable/progress_bg</item>
        <item name="android:visibility">gone</item>
    </style>



</resources>
