<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_gray"
        tools:context=".screens.application.ApplicationActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/image_back"
                    style="@style/image_back_or_close"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    style="@style/image_spare_parts"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/title_application"
            style="@style/text_from_add"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            />

    <TextView
            android:id="@+id/app_description"
            style="@style/text_from_view"
            app:layout_constraintStart_toStartOf="@id/title_application"
            app:layout_constraintEnd_toEndOf="@id/title_application"
            app:layout_constraintTop_toBottomOf="@id/title_application"
            />

    <TextView
            android:id="@+id/your_address"
            style="@style/text_from_add"
            app:layout_constraintStart_toStartOf="@id/title_application"
            app:layout_constraintTop_toBottomOf="@id/app_description"
            app:layout_constraintEnd_toEndOf="@id/title_application"
            />

    <TextView
            android:id="@+id/your_name"
            style="@style/text_from_add"
            app:layout_constraintStart_toStartOf="@id/title_application"
            app:layout_constraintTop_toBottomOf="@id/your_address"
            app:layout_constraintEnd_toEndOf="@id/title_application"
            />

    <TextView
            android:id="@+id/call_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="@string/call"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/orange2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>